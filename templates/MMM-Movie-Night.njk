<div class="mmm-movie-night">
  {% if loading %}
    <div class="dimmed light">{{ "LOADING" | translate | safe }}</div>
  {% else %}
    <h1 class="bright medium">
      {{ theme }}
    </h1>
    <p>
      {{ date }}
    </p>
    <div class="mmm-movie-night-movies">
      {% for movie in movies %}
        <div class="mmm-movie-night-movie">
          <img
          src="{{ movie.posterUrl }}"
          class="mmm-movie-night-movie-poster"
          alt=""
        ></img>

          {{ movie.title }} ({{ movie.year }})
      </div>
      {% endfor %}
    </div>
  {% endif %}
</div>
